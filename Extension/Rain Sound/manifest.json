{
  "name": "Rain Sound Extension",
  "description": "Chrome extension to play rain sound in the background",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["rain_on_roof.ogg"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/images/rain16.png",
      "32": "/images/rain32.png",
      "48": "/images/rain180.png",
      "128": "/images/rain192.png"
    }
  },
  "icons": {
    "16": "/images/rain16.png",
    "32": "/images/rain32.png",
    "48": "/images/rain180.png",
    "128": "/images/rain192.png"
  }
}
